# SecureArch Portal - Environment Configuration

# =============================================================================
# FLASK APPLICATION SETTINGS
# =============================================================================
FLASK_ENV=development
FLASK_APP=app_web.py
FLASK_DEBUG=true

# =============================================================================
# NODE.JS APPLICATION SETTINGS (if using TypeScript server)
# =============================================================================
NODE_ENV=development
PORT=3001
API_VERSION=v1

# =============================================================================
# SECURITY CONFIGURATION (CRITICAL - CHANGE THESE!)
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-super-secret-flask-key-change-this-in-production

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=securearch_portal
DB_USER=securearch_user
DB_PASSWORD=your_secure_password
DB_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=7d

# Security Settings
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for notifications and password reset)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=SecureArch Portal <noreply@securearch.com>

# File Upload Settings
MAX_FILE_SIZE=52428800
UPLOAD_PATH=uploads
ALLOWED_FILE_TYPES=pdf,png,jpg,jpeg,vsdx,drawio

# OWASP Data Sources
OWASP_ASVS_VERSION=4.0.3
OWASP_TOP10_YEAR=2021
OWASP_PROACTIVE_CONTROLS_VERSION=2024

# External APIs (for enhanced security data)
GITHUB_TOKEN=your_github_token_for_owasp_data
CVE_API_KEY=your_cve_api_key

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/securearch.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Analytics and Monitoring
ANALYTICS_ENABLED=true
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Development Settings (only for development)
DEBUG_MODE=true
SWAGGER_ENABLED=true
MOCK_OWASP_DATA=false 